        <view class="info-item"><image src="../../images/time.svg" class="icon" />{{time}}</view>
        <view class="info-item"><image src="../../images/person.svg" class="icon" />{{user}}</view>
      </view>
      <view class="para"><text>{{content}}</text></view>
    </van-cell>
</view>

